<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_effect"
                android:padding="5dp"
    >

  <ImageView
      android:id="@+id/imv_image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/tv_max_chapter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_marginBottom="50dp"
      android:layout_marginRight="5dp"
      android:text="324234324"
      android:textColor="#64B5F6"
      android:textStyle="bold"
      tools:text="tetxt12321321"
      />

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="5dp"
      android:layout_toRightOf="@id/imv_image"
      android:orientation="vertical"
      android:weightSum="2">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/book"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:text="12312321321"
        android:textColor="@color/list_truyen_by_type_row_text"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imv_image"
        android:drawableLeft="@drawable/pencil_2"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:text="12321"
        android:textColor="@color/list_truyen_by_type_row_text"
        android:textStyle="italic"
        />
  </LinearLayout>
</RelativeLayout>
