<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="actionOverflowMenuStyle">@style/MyOverflowMenu</item>
  </style>

  <style name="MyOverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
    <item name="overlapAnchor">false</item>
    <item name="android:overlapAnchor" tools:ignore="NewApi">false</item>
    <item name="android:dropDownVerticalOffset">4.0dip</item>
  </style>

  <!-- BOTTOM NAVIGATION MENU ITEM -->
  <style name="Theme.AppCompat.navTheme">
    <item name="colorPrimary">@color/chapter_bottom_sheet_background</item>
    <item name="colorControlHighlight">@color/chapter_bottom_sheet_background</item>
  </style>

  <!-- TRANSTION ANIMATION -->
  <style name="Fade">
    <item name="android:windowEnterAnimation">@anim/translate_in</item>
    <item name="android:windowExitAnimation">@anim/translate_out</item>
  </style>

  <style name="translate">
    <item name="android:windowEnterAnimation">@anim/translate_in</item>
    <item name="android:windowExitAnimation">@anim/translate_out</item>
  </style>

  <style name="myActionBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
    <item name="android:background">#fff</item>
    <item name="android:colorPrimary">#fff</item>
  </style>


  <style name="chapter_toolbar_title">
    <item name="android:maxLines">1</item>
    <item name="android:padding">2dp</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="toolbar_title">
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/list_chapters_toolbar_title_text</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="ProgressBar" parent="@android:style/Widget.ProgressBar">
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:visibility">gone</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:indeterminateDrawable">@drawable/progress_dialog_background</item>
  </style>

  <!-- transparent progressDialog -->
  <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowTitleStyle">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:background">@color/bottom_navigation_background</item>
    <item name="android:textColorPrimary">@color/bottom_navigation_item_normal</item>
    <item name ="android:colorAccent">@color/list_chapters_toolbar_toolbar_background</item>
  </style>

  <style name="MySwitch" parent="Theme.AppCompat.Light">
    <!-- active thumb & track color (30% transparency) -->
    <item name="colorControlActivated">@color/chapter_bottom_sheet_icon_text</item>

    <!-- inactive thumb color -->
    <item name="colorSwitchThumbNormal">@color/colorAccent</item>

    <!-- inactive track color (30% transparency) -->
    <item name="android:colorForeground">@color/bottom_navigation_background</item>
  </style>
</resources>
